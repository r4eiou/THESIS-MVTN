{
  "name": "FSL105 Gesture Recognition",
  "dataset": "FSL105",
  "epochs": 100,
  "phase": "train",
  "data": {
    "optical_flow": false,
    "type": "rgb",
    "n_classes": 105,
    "n_frames": 40,
    "data_path": "datasets/FSL105",
    "split_path": "datasets/FSL105/splits", 
    "result_dnormal": "./result",
    "batch_size": 8
  },
  "checkpoints": {
    "save_policy": "all",
    "save_name": "train_fsl105_rgb",
    "save_dir": "./checkpoints/",
    "save_iters": 30,
    "tb_path": "train_log/FSL105"
  },
  "resume": "./checkpoints/FSL105/train_fsl105_rgb_2.pth",
  "solver": {
    "type": "AdamW",
    "workers": 4,
    "weight_decay": 0.0001,
    "base_lr": 0.0001,
    "decay_steps": [50, 75]
  },
  "network": {
    "backbone": "resnet",
    "pretrained": true,
    "ff_size": 1024,
    "n_head": 8,
    "dropout2d": 0.1,
    "dropout1d": 0.5,
    "n_module": 6
  }
}
